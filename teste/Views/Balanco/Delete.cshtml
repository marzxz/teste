@model teste.Models.Balanco

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Deseja deletar este item?</h3>
<div>
 
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
         Data
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.data)
        </dd>
        <dt class = "col-sm-2">
           Valor Debito
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.valordebito)
        </dd>
        <dt class = "col-sm-2">
            Valor Crédito
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.valorcredito)
        </dd>
        <dt class = "col-sm-2">
            Saldo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.saldo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
