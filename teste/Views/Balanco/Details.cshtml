@model teste.Models.Balanco

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Balanço</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Data
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.data)
        </dd>
        <dt class = "col-sm-2">
           Valor Débito
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.valordebito)
        </dd>
        <dt class = "col-sm-2">
            Valor Crédito
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.valorcredito)
        </dd>
        <dt class = "col-sm-2">
           Saldo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.saldo)
        </dd>
